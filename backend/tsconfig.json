{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./build",
        "strict": true,	
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "paths": {
            "*": ["./node_modules/*", "./src/types/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
  